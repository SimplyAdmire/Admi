{
    "name": "simplyadmire/admi",
    "license": "MIT",
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin"
    },
    "authors": [
        {
            "name": "Simply Admire BV",
            "email": "support@simplyadmire.com"
        },
        {
            "name": "Lars Nieuwenhuizen",
            "email": "lars.nieuwenhuizen@me.com"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "src/*",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "vcs",
            "url": "git@github.com:SimplyAdmire/SimplyAdmire.Oversight.git"
        }
    ],
    "require": {
        "typo3/flow": "^3.3",
        "neos/cqrs": "dev-master",
        "simplyadmire/oversight": "@dev"
    },
    "require-dev": {
        "typo3/kickstart": "^3.3",
        "typo3/buildessentials": "3.3.x-dev",
        "flowpack/behat": "dev-master",
        "phpunit/phpunit": "^5.4",
        "codeclimate/php-test-reporter": "^0.2.0",
        "mikey179/vfsstream": "~1.6"
    },
    "replace": {
        "typo3/flow-base-distribution": "self.version"
    },
    "suggest": {
        "ext-pdo_sqlite": "For running functional tests out-of-the-box this is required"
    },
    "scripts": {
        "post-update-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update": "TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install": "TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall"
    }
}
